        android:text="Result"
        android:layout_gravity="center"
        android:backgroundTint="#21AC27"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvResult"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


